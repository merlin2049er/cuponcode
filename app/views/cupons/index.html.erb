<p id="notice"><%= notice %></p>

<h1>Cupons</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Comment</th>
      <th>Valid</th>
      <th>Start</th>
      <th>End</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cupons.each do |cupon| %>
      <tr>
        <td><%= cupon.code %></td>
        <td><%= cupon.comment %></td>
        <td><%= cupon.valid %></td>
        <td><%= cupon.start %></td>
        <td><%= cupon.end %></td>
        <td><%= cupon.value %></td>
        <td><%= link_to 'Show', cupon %></td>
        <td><%= link_to 'Edit', edit_cupon_path(cupon) %></td>
        <td><%= link_to 'Destroy', cupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cupon', new_cupon_path %>
